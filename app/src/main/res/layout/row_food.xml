<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/layer_list_ripple_purple_and_magenta_400">
            <TextView
                android:elevation="2dp"
                android:textColor="#FFFFFF"
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food name"
                android:textStyle="bold"/>

            <ToggleButton
                android:focusable="false"
                android:id="@+id/inStock"
                android:background="@drawable/selector_switch_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#FFF"
                android:textOn="Instock"
                android:textOff="OutOfStock"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/foodName"/>
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_black_24dp"/>
            <ImageView
                android:id="@+id/editName"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic__edit_24"
                android:layout_toLeftOf="@id/deleteButton"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/foodName"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>