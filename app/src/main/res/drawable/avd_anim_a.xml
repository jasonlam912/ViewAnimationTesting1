<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="48">
            <path
                android:name="path_2"
                android:pathData="M 12 0 L 1.6 50"
                android:strokeColor="#AB47BC"
                android:strokeWidth="4"/>
            <path
                android:name="path_3"
                android:pathData="M 12 0 L 22.4 50"
                android:strokeColor="#AB47BC"
                android:strokeWidth="4"/>
            <path
                android:name="path_4"
                android:pathData="M 4 32 L 20 32"
                android:strokeColor="#AB47BC"
                android:strokeWidth="4"/>
        </vector>
    </aapt:attr>
    <target android:name="path_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="2000"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="2000"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_4">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="1000"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
