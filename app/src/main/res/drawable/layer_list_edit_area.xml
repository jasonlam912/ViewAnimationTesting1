<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="6dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#4D000000"/>
            <size android:height="60dp" />
        </shape>
    </item>
    <item android:gravity="top|left"
        android:drawable="@drawable/layer_list_edit_area_corner"/>
    <item android:gravity="top|right">
        <rotate android:fromDegrees="90"
            android:toDegrees="90"
            android:drawable="@drawable/layer_list_edit_area_corner"/>
    </item>
    <item android:gravity="bottom|right">
        <rotate android:fromDegrees="180"
            android:toDegrees="180"
            android:drawable="@drawable/layer_list_edit_area_corner"/>
    </item>
    <item android:gravity="bottom|left">
        <rotate android:fromDegrees="270"
            android:toDegrees="270"
            android:drawable="@drawable/layer_list_edit_area_corner"/>
    </item>
    <item android:gravity="center"
        android:drawable="@drawable/layer_list_yellow_button"/>

    <item>
        <ripple android:color="#81C784"/>
    </item>
</layer-list>